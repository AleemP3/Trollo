<%= form_with(model: [@list, @task], local: true, class: "ui form") do |f| %>
  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title, required: true, placeholder: "Title" %>
  </div>
  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description, required: true, placeholder: "Description" %>
  </div>
  <%= f.submit class: "ui green button" %>
  <% end %> 